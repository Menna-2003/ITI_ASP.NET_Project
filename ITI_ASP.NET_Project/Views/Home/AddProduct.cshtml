@{
    Layout = "_Admin";
}
@model Product

<div class="container-fluid py-4">
    <form method="post" asp-action="AddProduct" asp-controller="Home" enctype="multipart/form-data">
        <div class="form-row d-flex gap-4">
            <div class="form-group col-md-6">
                <label asp-for="Name" for="ProductName">Product Name</label>
                <input asp-for="Name" type="text" class="form-control" id="ProductName" placeholder="Enter Product Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price" for="Price">Price</label>
            <input asp-for="Price" type="number" class="form-control" id="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-row mt-5 custom-file">
            <input type="file" name="Image" class="form-control custom-file-input" />
            <label class="custom-file-label" for="TourPic">Upload Product Image</label>
        </div>

        <button type="submit" class="btn btn-primary" style="margin: 50px 0">Add Product</button>
    </form>
</div>